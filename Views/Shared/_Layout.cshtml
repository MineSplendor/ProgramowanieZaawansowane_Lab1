<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Przykład aplikacji dla studentów </title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Przykład oprogramowania strony</a>
                <button class="navbar-toggler" type="button" data-toggle="collapse" data-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Strona główna</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">O mnie</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Polityka prywatności</a>
                        </li>
                        <li>
                            <div class="dropdown">
                                <button class="dropbtn">Bazy danych</button>
                                <div class="dropdown-content">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Movies" asp-action="Index">Filmy</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="BookLists" asp-action="Index">Książki</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Phones" asp-action="Index">Telefony</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Shoes" asp-action="Index">Buty</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Knives" asp-action="Index">Noże</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Plates" asp-action="Index">Talerze</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Glasses" asp-action="Index">Szklanki</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Drinks" asp-action="Index">Napoje</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Meats" asp-action="Index">Mięsa</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Vegetables" asp-action="Index">Warzywa</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Genres" asp-action="Index">Gatunki literackie</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Authors" asp-action="Index">Autorzy</a>
                                    <a class="nav-link text-dark" asp-area="" asp-controller="AuthorsBooks" asp-action="Index">Książki autorów</a>
                                </div>
                            </div>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2023 - Sebastian Reguła - <a asp-area="" asp-controller="Home" asp-action="Privacy">Polityka Prywatności</a>
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @RenderSection("Scripts", required: false)
</body>
</html>
